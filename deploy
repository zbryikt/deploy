#!/usr/bin/env bash
if [[ -z "$2" ]]; then
  branch=gh-pages
else
  branch=$2
fi
if [[ -d "$1" ]]; then
  if [[ -d .git ]]; then
    REV=`git describe --always`
    rm -rf _public
    git clone $(git remote get-url origin) --depth 1 -b $2 _public
    cd _public
    git rm -r *
    cp -R ../$1/* ./
    git add *
    git commit -m "regen for $REV"
    git push
    cd ..
    rm -rf _public
  else
    echo "please use deploy under a git repo."
  fi
else
  echo "please specify static folder."
fi
